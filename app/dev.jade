include partials/mixins

doctype html

html(lang='en', ng-app='FTSS')

    head

        meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")

        // (c) 2014 Jeff McCoy, http://linkedin.com/in/jeffsmccoy

        meta(charset='utf-8')
        title(ng-bind-template='FTSS {{pageTitle}}')

        |<!--[if IE]><meta http-equiv="refresh" content="0;URL='legacy.html'"><![endif]-->

        +initScripts(false, true)

        style(type='text/css').
            body > :not(#setupMessage) {
                display: none!important;
            }

            html, body {
                height: 100%;
                width: 100%;
                top: 0;
                right: 0;
                bottom: 0;
                left: 0;
                overflow: hidden;
                position: absolute;
            }

            body {
                background-color: #f7f7f7;
                font-family: 'Open Sans', sans-serif;
                margin: 0;
                padding: 0;
                position: relative;
            }

            [ng-cloak]  {
                display: none !important;
            }
            #setupMessage {
                position: absolute;
                background: #222;
                top: 0;
                left: 0;
                right: 0;
                color: #fff;
                padding: 15px;
            }



        link(rel='stylesheet', href='css/app.css')

    body.wait(ng-controller='mainController',
                id='{{ftss.viewTitle}}',
                ng-class='{archived:ftss.showArchived,collapsed:ftss.showAlternateView}',
                class='{{roleClasses}}')

        img#bg1
        img#bg2
        #bgText

        #setupMessage Setting up FTSS...

        ng-include(src='"/partials/layout.html"')

        #spinner(ng-cloak)
            +spinner()

        script(src='js/vendor.js')
        script(src='js/partials.js')
        script(src='js/app.js')