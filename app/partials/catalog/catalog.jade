include ../__mixins

- var columns = {Course:40, IMDS:10, G081:10, Length:15}
+tableHeader('Course', columns, 'catalog')

    td
        span(hover='This course was recently updated.')
            +icon('flag')
        span(hover='popover-priority')
            +icon('asterisk')

    td(style='text-transform: uppercase')

        b {{row.PDS}}
        |&nbsp;-&nbsp;{{row.Number}}&nbsp;

        span(ng-show='row.IMDS')
            |(IMDS: {{row.IMDS}})

        span.pull-right.archiveExclude(ng-show='row.Units',
                        hover='{{row.PDS}} is taught by {{row.Units.length}} FTDs:',
                        content='{{row.units}}',
                        style='margin-right: 15px;')
            +icon('instructor')

        span.pull-right.archiveOnly(style='margin-right:10%') *** ARCHIVED COURSE ***
        br
        span.peek {{row.Title}}

    td {{row.IMDS}}

    td {{row.G081}}

    td
        | Days:&nbsp;
        b {{row.Days}}
        br
        span.peek
            | Hours:&nbsp;
            b {{row.Hours}}

    td: +actions(false, true, true, 'Course')