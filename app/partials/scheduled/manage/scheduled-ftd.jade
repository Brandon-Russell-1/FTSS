include ../../mixins

div(ng-if='canEdit'): +addButton('Create Class')

+downloadCSV()

.wrapped.addNew

    +userInstructions('scheduled_ftd', true)

    resource-view(ng-show='!ftss.showAlternateView')

    table.table.table-striped.table-hover(ng-if='ftss.showAlternateView')

        thead

            th Room
            th Instructor
            th Course
            th Dates
            th Seats

        tbody

            tr(ng-repeat='row in rawSchedule | orderBy:"Start"')

                td {{row.Location}}
                td {{row.Instructor.Name}}
                td {{row.Course.PDS}} - {{row.Course.Number}}
                td {{row.dateRange}}
                td {{row.Approved}}