include ../mixins

form.form-horizontal(name='modal')

    .modal-header.caps
        h3: +icon('plus-circle', '{{data.Course.Number}} Seat Request')

    #requestSeats.modal-body

        .alert.alert-info(ng-if='autoApprove') Seats will be auto-approved based on your current roles in FTSS.

        p.lead
            ng-pluralize(count='data.openSeats - data.count',
                            when='{1:"There is only one seat ", 0: "There are no more seats ", "other":"There are {} seats "}')
            | available for the {{data.dateRange}} class.
        br

        h4: +icon('puzzle-piece', 'Requesting Unit')
        div(explain='scheduled-request-host', right)
            select(selectize='Hosts', bind='data.HostId', remember='host')

        br

        h4: +icon('student_hand', 'Students')
        div(explain='scheduled-request-students', right)
            select.wide(selectize='people', max='{{autoApprove ? 99 : data.openSeats}}')

        br

        div(explain='scheduled-request-notes', right)
            h4: +icon('edit', 'Comments')
            textarea.form-control(ng-model='data.Notes')

        br

        h4.pull-right(ng-show='data.count > 0')
            +icon('info-circle', 'You are requesting')
            b(ng-pluralize, count='data.count', when='{1:" one seat","other":" {} seats"}').

        .clearfix

    +modalFooter('Submit Request', '!data.HostId || data.Students.length < 1')

