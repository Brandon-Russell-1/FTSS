include ../__mixins

form.form-horizontal(name='modal')

    +modalHeader('Build Class', "{{data.Course.Number}}")

    .modal-body

        +formGroup('FTD', 'scheduled-edit-ftd')
            .input-group
                .input-group-addon.w15
                    +icon('building-o')
                .input-group-selectize
                    select(selectize='Units', bind='UnitId', remember='ftd')
        br

        +formGroup('Course', 'scheduled-edit-course')
            .input-group
                .input-group-addon.w15
                    +icon('books')
                .input-group-selectize
                    select(selectize='MasterCourseList',
                            bind='CourseId',
                            watch='UnitId',
                            watchList='Units.Courses')
        br

        +formGroup('Instructor', 'scheduled-edit-instructor')
            .input-group
                .input-group-addon.w15
                    +icon('instructor')
                .input-group-selectize
                    select(selectize='Instructors',
                            bind='InstructorId',
                            watch='UnitId',
                            watchList='Units.Instructors')
        br

        +formGroup('Dates', 'scheduled-edit-dates')
            .input-group
                .input-group-addon.w15
                    +icon('calendar_range')

                input.form-control.w45(ype='text', ng-model='data.Start', data-max-date='{{End}}', placeholder='Start Date', bs-datepicker='', required='required')

                input.form-control.w45.pull-right(type='text', ng-model='data.End', data-min-date='{{Start}}', placeholder='End Date', bs-datepicker='')

        br

        +formGroup('Notes', 'scheduled-edit-notes')
            .input-group
                textarea.form-control(type='text', ng-model='data.ClassNotes')

        hr

        +formGroup('Reserved', 'scheduled-edit-reserved')
            .input-group.pull-left(style='width:30%!important')
                input.form-control(ng-model='data.Host', type='number', min='0', required)
                .input-group-addon Host

            .input-group.pull-left(style='width:30%!important;margin-left:5%')
                input.form-control(ng-model='data.Other', type='number', min='0', required)
                .input-group-addon Non-Host

            #modalScheduledOpenSeats.input-group {{getOpenSeats()}}

        .clearfix


    +modalFooter()