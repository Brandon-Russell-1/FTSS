include ../__mixins

- var columns = {Student:40, Host:15, Inprocessed:15, Requirements:15}
+tableHeader('Student', columns, 'students')

    td
        span(hover='This student was recently updated.')
            +icon('flag')
        span(hover='This student has priority training requirements (on the CAF/MCL).')
            +icon('asterisk')

    td
        b
            span.archiveOnly ***ARCHIVED STUDENT***&nbsp;
            | {{row.StudentName}}

    td {{row.HostUnit.Unit}}

    td {{row.wait}}

    td
        b(ng-show='row.Requirements_JSON.length',
            hover='Training Requirements',
            content='<dl class="dl-horizontal">{{row.requirements}}</dl>')
            +icon('checklist')
            | {{row.Requirements_JSON.length}} Courses

    td: +actions(false, true, true, 'student')