include ../mixins

- var columns = {'Class #':8, 'Dates':18, Unit:15, Open:5, Seats:5, Notes: 25}

.wrapped.noAdd

    +userInstructions('my-unit', true)

    +grouping()

        +tableBody(columns)(left, hover='{{::row.studentList}}', hoverClass="leftBarOverlayHover")

            td
                .double.approved(hover='Request approved'): +icon('check')
                .double.denied(hover='Request denied'): +icon('times')
                .double.pending(hover='Request pending'): +icon('wait')

            td {{::row.Class.TTMS}}

            td {{::row.Class.dateRange}}

            td {{::row.Unit.LongName}}

            td.double {{::row.Class.openSeats}}

            td.double {{::row.count}}

            td(style='overflow:visible')

                p.italics {{::row.Notes}}

                p(ng-if='row.Response')

                    b FTD:&nbsp;
                    span {{::row.Response}}

            td: #edit(edit-students)