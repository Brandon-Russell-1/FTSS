include ../__mixins

header.navbar.navbar-inverse

    .navbar-header(ng-click='fn.doNavigate("home")')
        span.navbar-brand
            span.white
                +icon('af_logo')
            span.text#ftss FTSS 3 |&nbsp;
            span.text.small#roleText Role(s): {{roleText}}

    ul.nav.navbar-nav.pull-right.hidden-xs

        li
            .support(bs-popover,
            ng-click='fn.doMakeBitly()',
            data-animation='am-flip-x',
            title='Share This Link',
            data-content-template='/partials/bitly.html',
            data-placement='bottom-right',
            data-container='body')
                +icon('share')

        li
            .support(tabindex='-1',
            bs-popover,
            data-container='body',
            data-content-template='/partials/user-settings.html',
            data-placement='bottom-right',
            data-animation='am-flip-x',
            title='My Settings')
                +icon('sliders')

        li
            .support(data-content-template='/partials/support.html',
            data-placement='left',
            bs-aside='aside',
            data-container='body',
            data-animation='am-slide-left')
                +icon('question')