include ../__mixins

#searchContainer(ng-class='{tagBox:tagBox, singleTag:singleTag}')

    #stats
        span.badge(ng-class='{overload:overload}', hover='record-count', bottom)
            | {{count}}
            span    ⃰

    #tagBox(explain='tagBoxTip', top, no-arrow)

        select.hide(selectize='appInit',
                    multiple,
                    style='width:100%',
                    autofocus="autofocus",
                    tabindex='0')

    #fakeSearchButton.btn.btn-info.white(hover='tagBox-button', top, no-arrow)
        +icon('arrow-right')

    #searchBox(explain='searchBoxTip', top, no-arrow)

        input.search.search-large(type='search',
                                    ng-model='searchText.$',
                                    placeholder='Type here to search within this page.',
                                    tabindex='-1')