include ../__mixins

.wrapped
    +grouping()

        div(class='well request{{row.status}}', ng-class='{"true":"expanded"}', ng-repeat='row in group')

            .statusBackground {{row.status}}

            h4(ng-click='row.expand = !row.expand')
                span.btn.invertSimple.btnFake(class='btn-{{row.iconClass}}', style='opacity: 1;')
                    +icon('wait')
                | &nbsp;&nbsp; {{row.Course.PDS}} - {{row.request.Students.length}} Requested ({{row.openSeats}} Open)
                span.pull-right(style='letter-spacing: .1em')
                    | {{row.start}} - {{row.end}}
                    +icon('calendar_range')

            hr.rollup

            .rollup.slide
                p.lead(ng-hide='groupBy=="course"') {{row.Course.Number}}: {{row.Course.Title}}
                .col-lg-7.pull-left
                    table.table.table-split.no-border
                        tbody

                            tr
                                td Instructor
                                td: +icon('instructor')
                                td.truncate.bold {{row.Instructor.InstructorName}}
                            tr
                                td Requested
                                td: +icon('download')
                                td: b {{row.request.Host.Unit}}
                            tr(ng-show='row.Notes')
                                td Comments
                                td: +icon('comments')
                                td {{row.request.Notes}}


                .col-lg-5.pull-right.text-right(style='margin-top: 10px')
                    p.truncate(ng-repeat='s in row.request.Students', style='margin-bottom: 10px')
                        +icon('student_hand')
                        {{s}}
                .clearfix
                .requestActions(ng-if='row.request.Status < 2')
                    hr
                    .col-lg-9.pull-left.requestStats(style='margin-top: 8px;')
                        table.table-tiny(style='width:20%')
                            thead(style='font-size:1.2em')
                                tr
                                    th {{row.Course.Min}}
                                    th {{row.Course.Max}}
                            tbody
                                tr
                                    td Min
                                    td Max
                        table.table-tiny
                            thead(style='font-size:1.2em')
                                tr
                                    th {{row.Host}}
                                    th {{row.Other}}
                                    th {{row.approvedSeats}}
                            tbody
                                tr
                                    td Host
                                    td Other
                                    td Approved
                        table.table-tiny
                            thead(style='font-size:1.2em')
                                tr
                                    th {{row.pendingSeats}}
                                    th {{row.openSeats}}
                            tbody
                                tr
                                    td Pending
                                    td Open
                    .pull-right
                        .btn.btn-success.btn-labeled.btn-muted
                            span.btn-label.invert
                                +icon('approve')
                            | Approve {{row.request.Students.length}} seat(s)
                        .btn.btn-danger.row.btn-labeled.btn-muted
                            span.btn-label.invert
                                +icon('deny')
                            | Deny
                    .clearfix
