include ../__mixins

+addButton('Add Instructor')

form#embed(name='modal').col-lg-6

    br

    +userInstructions('units', true)

    .form-horizontal

        .input-group(explain='units-email', right)
            .input-group-addon.w15
                +icon('envelope')
            input.form-control(ng-model='data.Email', type='email')
            .helper Please enter a valid email address.

    br

    h4
        b Courses Taught
        .pull-right {{data.Courses_JSON.length}}

    .pds(explain='units-courses', right)
        select(selectize='MasterCourseList', bind='Courses_JSON', multiple)

    .text-info.info.italics.pull-right
        +icon('info-circle')
        | You can paste a list of PDS course codes to update this list faster

    .clearfix

    +modalFooter('Save Changes')


#rightScroll.wrapped.col-lg-6.addNew

        .text-info.info(ng-if='!groups')
            +userInstructions('manage-ftd-no-instructors')

        div(ng-repeat='(header, group) in groups')

            h3 Instructors

            table.table.table-striped.table-expanded.table-hover

                tbody

                    tr.middle.am-slide-right(ng-repeat='row in group track by row.Id',
                                                        ng-class='{archived:row.Archived}',
                                                        ng-file-drop='onFileSelect($files)')

                        td.cleanPhoto(class='{{running(row)}}'): photo(size='75px', data='row')

                        td
                            span.archiveOnly  ***ARCHIVED INSTRUCTOR***&nbsp;
                            b.form-control(contenteditable,
                                            blur,
                                            ng-model='row.InstructorName',
                                            onEnter='inlineUpdate("InstructorName")',
                                            placeholder='name')

                            .form-control(contenteditable,
                                            blur,
                                            ng-model='row.InstructorEmail',
                                            onEnter='inlineUpdate("InstructorEmail")',
                                            placeholder='email')

                        td.w5: +actions(true, false, true, 'instructor')



