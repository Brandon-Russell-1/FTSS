include ../__mixins

form.form-horizontal(name='modal')

    traverse

    .modal-header.caps

        h3
            +icon('graph_pie')
            | {{data.InstructorName}}'s Stats

    .modal-body

        .row

            .col-lg-4
                photo.img-rounded(size='150px', shape='rectangle', data='data', watch, force)


            .col-lg-8

                table.table.table-split

                    tr(ng-repeat='(title, stat) in stats')

                        td {{title}}
                        td.bold {{stat}}

                .text-center
                    .lead.strong(style='margin-bottom:0') {{annualEffectiveness}}% Annual Instructor Utilization
                    .small.italics {{annualHours}} hours out of 48 weeks

        br

        table.table.table-striped

            thead

                tr

                    th PDS
                    td TTMS
                    td Dates
                    td Students

            tbody

                tr(ng-repeat='course in history')

                    td {{course.Course.PDS}}
                    td {{course.TTMS}}
                    td {{course.startText}} - {{course.endText}}
                    td {{course.allocatedSeats}}


    +modalFooter()
