include ../__mixins

mixin miniLink(page, tag, name)
    span.link(ng-click='fn.doNavigate("' + page + '")')
        +icon(tag)
        span= name


mixin panelGroup(ico, title, type)
    .panel(class='panel-' + type + ' text-' + type)

        .panel-heading
            h4.panel-title
                +icon(ico)
                =title

        .panel-body
            block

#slideshowToggle(hover='Toggle viewing the AF Week in Photos.', no-arrow, ng-click='toggleSlides = !toggleSlides')
    +icon('camera')

.wrapped(style='top:-4em;padding-top:1em;overflow:hidden',
            ng-class='{"showContent":toggleSlides}')

    .jumbotron('style="margin:-25px;padding:10px;padding-left:25px"')
        h1 Field Training Scheduling System
        p The Air Force field training requirements & scheduling system

    br
    br

    .row

        .col-lg-9

            .well

                p(user-message='home-intro')

                br

                #homeInstructions
                    //
                        h5.border-bottom.role.mtf.ftd.approvers Requirements

                        .row.role.mtf.ftd
                            .col-lg-3: +miniLink('backlog', 'checklist2', 'Generate 898')
                            .col-lg-9(user-message='navigation-generate-898')

                        .row.role.mtf.ftd.approvers
                            .col-lg-3: +miniLink('requirements', 'agree', '898 Response')
                            .col-lg-9(user-message='navigation-898-response')

                    h5.border-bottom Classes

                    .row.role.ftd.scheduling
                        .col-lg-3: +miniLink('scheduled-ftd', 'calendar_range', 'Manage')
                        .col-lg-9(user-message='navigation-manage-schedule')

                    .row.role.schduling
                        .col-lg-3: +miniLink('ttms', 'hash', 'Need Class IDs')
                        .col-lg-9(user-message='navigation-ttms')

                    .row.role.ftd
                        .col-lg-3: +miniLink('requests', 'download', 'Manage Requests')
                        .col-lg-9(user-message='navigation-manage-requests')

                    .row
                        .col-lg-3: +miniLink('catalog', 'books', 'Course Catalog')
                        .col-lg-9(user-message='navigation-course-catalog')

                    .row
                        .col-lg-3: +miniLink('scheduled', 'search', 'Search')
                        .col-lg-9(user-message='navigation-view-scheduled')


                    h5.border-bottom.role.ftd.mtf.scheduling Manage FTSS

                    .row.role.ftd.scheduling
                        .col-lg-3: +miniLink('manage-ftd', 'building-o', 'FTDs')
                        .col-lg-9(user-message='navigation-ftds')

                    .row.role.mft.ftd
                        .col-lg-3: +miniLink('hosts', 'puzzle-piece', 'Host Units')
                        .col-lg-9(user-message='navigation-host-units')

                    br
                    br

                    .lead No access?  Email <a href='mailto:372trs.trg.ftss@us.af.mil?subject=FTSS%20Access%20Request'>982 TRG/FTSS</a> your primary role (MTF/FTD Scheduler)


        .col-lg-3

            div(ng-show='courseUpdates.length > 0')

                +panelGroup('flag', 'Course Updates', 'success')

                    h4(ng-repeat='course in courseUpdates') {{course.PDS}} - {{course.Number}}

            #updates
                +panelGroup('info-circle', 'FTSS Updates', 'warning')
                    blockquote.blockquote-reverse(ng-repeat='update in updates')
                        p(style='font-size:.85em') {{update.Update}}
                        footer {{update.date}}
