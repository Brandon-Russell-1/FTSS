include ../partials/mixins

header.navbar.navbar-inverse

    .navbar-header
        span.navbar-brand
            span.white#aflogo: +icon('af_logo')
            span.text#ftss FTSS |&nbsp
            span.text#ftd(ng-if='ftd', ng-cloak, ng-click='switchContext("ftd")') {{ftd.LongName}} -&nbsp;
            span.text#host(ng-if='host', ng-cloak, ng-click='switchContext("host")') {{host.LongName}} -&nbsp;
            span.text#roleText(ng-cloak) {{roleText || 'Getting roles...'}}

    ul.nav.navbar-nav.pull-right.hidden-xs

        li: #share.support(bs-popover,
                        left,
                        url-shortner,
                        animation='am-fade-and-slide-top',
                        hover='topbar-share',
                        content-template='/partials/url-shortner.html',
                        data-placement='bottom-right',
                        container='body',
                        no-arrow)
                +icon('share')

        li: .support(left, hover='Click to view the user guide', no-arrow): a(href='guide/intro.html', target='_blank'): +icon('question')

        li: .support(style='width:1em')
    //
        li: .support(data-content-template='/partials/support.html',
                        left,
                        data-placement='left',
                        bs-aside='aside',
                        container='body',
                        animation='am-slide-left',
                        hover='topbar-help',
                        no-arrow)
                +icon('question')