doctype html
html(lang='en', ng-app='FTSS')

    head
        meta(charset='utf-8')
        meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
        meta(name='viewport', content='width=device-width', initial-scale='1.0')
        title(ng-bind-template='{{pageTitle}}')
        link(rel='stylesheet', href='css/app.css')

        script(src='js/vendor.js')

    body(ng-controller='mainController')

        // navbar
        header.navbar.navbar-inverse(role='banner')
            .navbar-header
                button#menu-toggler.navbar-toggle(type='button', data-toggle='collapse')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                span.navbar-brand
                    icon(path='aflogo', size='1.65em')
                    span FTSS 3
                    | | Developer Mode
            ul.nav.navbar-nav.pull-right.hidden-xs
                li.dropdown(ng-controller='user')
                    a.dropdown-toggle.hidden-xs.hidden-sm(href='#', data-toggle='dropdown', ng-once='')
                        | {{user.Name}}
                        b.caret
                    ul.dropdown-menu
                        li
                            a(href='personal-info.html') Personal info
                        li
                            a(href='#') Account settings
                        li
                            a(href='#') Billing

                li.settings.hidden-xs.hidden-sm
                    a(href='signin.html', role='button')
                        i.icon-share-alt
        // end navbar

        // sidebar
        div
            ul#dashboard-menu(ng-class='page()', ng-cloak='')
                li
                    h4 Training Actions
                nav-link(link='requirements', name='Requirements', icon='agree')
                nav-link(link='scheduled', name='Built Classes', icon='calendar_range')
                nav-link(link='requests', name='Class Requests', icon='sent')
                li
                    h4 Common Lists
                nav-link(link='catalog', name='Catalog', icon='books')
                nav-link(link='units', name='Units', icon='location')
                nav-link(link='instructors', name='Instructors', icon='instructor')
                nav-link(link='students', name='Students', icon='student_hand')
        // end sidebar

        #content

            #pad-wrapper
                .row
                    #stats(ng-cloak='')
                        span.badge(ng-class='{overload:overload}', hover='Displays the record count for your search.  If the background is <span style="color:#d58512;font-weight:800">orange</span>, there were too many records found so you"ll want to refine your search a little by adding more search tags.', show='bottom')
                            | {{count}}
                            span   ⃰
                    div(ng-show='loaded', style='width:97%;float:left')

                        #searchContainer.col-lg-12.no-pad(ng-class='{tagBox:tagBox}')

                            #tagBox.col-lg-10(explain='[icon=info]Use this search box to create custom queries that you can <i>bookmark or share</i>.  Combine as many as you like, the first row of tags in <b>bold</b> are custom searches related to this page.', show='top', no-arrow='')
                                select.hide(selectize='selectizeOptions', multiple='', placeholder='Click or type to add search terms', style='width:100%')
                                    optgroup(label='SMART FILTERS')

                            #searchBox.col-lg-10
                                input.search.search-large(type='search', ng-model='searchText.$', placeholder='Type in a search to limit the results for this list.')

                            #searchButtons.col-lg-2.no-pad
                                button.btn.btn-default(type='button', ng-click='reset()', hover='Clear this search', show='left')
                                    icon(path='undo')
                                span(style='width:5%')  
                                span.dropdown
                                    span.dropdown-toggle.btn.btn-default(hover='Change how data is grouped', show='left')
                                        icon(path='group')
                                    .dropdown-menu
                                        h3.popover-title Group By
                                        .btn-group-vertical
                                            button.btn.btn-link(ng-repeat='(val, name) in grouping', type='button', ng-model='groupBy.$', btn-radio='val')
                                                | {{name}}
                                span.dropdown
                                    span.dropdown-toggle.btn.btn-default(hover='Change the sorting order', show='left')
                                        icon(path='sort')
                                    .dropdown-menu
                                        h3.popover-title Sort By
                                        .btn-group-vertical
                                            button.btn.btn-link(ng-repeat='(val, name) in sorting', type='button', ng-model='sortBy.$', btn-radio='val')
                                                | {{name}}
                                span(style='width:5%')  
                                button#toggleExpand(ng-click='collapse()', hover='Toggle expanded or collapsed rows', show='left', class='btn btn-default {{wellCollapse}}', type='button')
                                    icon(path='expand')
                                    icon(path='collapse')
                    .clearfix
                    hr(style='margin:5px 0 5px')

                #messages(ng-cloak='', ng-if='messages.class')
                    .alert(class='alert-{{messages.class}}')
                        b {{messages.intro}}
                        br(style='line-height: 2em', ng-show='messages.newLine')
                        | {{messages.message}}

                spinner#spinner

                #mainView(ng-view='')

        script(src='js/partials.js')
        script(src='js/app.js')
