doctype html
html(lang='en', ng-app='FTSS')

    head
        meta(charset='utf-8')
        meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
        meta(name='viewport', content='width=device-width', initial-scale='1.0')
        title(ng-bind-template='{{pageTitle}}')
        link(rel='stylesheet', href='css/app.css')

        script(src='js/vendor.js')

    body(ng-controller='mainController')

        ng-include(src='"/partials/topbar.html"')
        ng-include(src='"/partials/leftbar.html"')

        #content

            #pad-wrapper
                .row
                    ng-include(src='"/partials/stats.html"')
                    ng-include(src='"/partials/searchbox.html"')

                    .clearfix
                    hr(style='margin:5px 0 5px')

                ng-include(src='"/partials/feedback.html"')

                #mainView(ng-view='')

        script(src='js/partials.js')
        script(src='js/app.js')
