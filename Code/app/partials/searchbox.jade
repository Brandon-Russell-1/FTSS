div(ng-show='loaded', style='width:97%;float:left')

    #searchContainer.col-lg-12.no-pad(ng-class='{tagBox:tagBox}')

        #tagBox.col-lg-10(explain='[icon=info]Use this search box to create custom queries that you can <i>bookmark or share</i>.  Combine as many as you like, the first row of tags in <i><b>bold-italics</b></i> are custom searches for this page.', show='top', no-arrow='')
            select.hide(selectize='selectizeOptions', multiple='', placeholder='Click or type to add search terms', style='width:100%')
                optgroup(label='SMART FILTERS')

        #searchBox.col-lg-10(explain='[icon=info]This search box lets you do full-text instant searches.  The more words you add, the more specific your search will be.  I.e., "robins engines" would find any data that included <i>both</i> robins and engines.', show='top')
            input.search.search-large(type='search', ng-model='searchText.$', placeholder='Type in a search to limit the results for this list.')

        #searchButtons.col-lg-2.no-pad

            button.btn.btn-default(type='button', ng-click='reset()', hover='Clear this search', show='left')
                icon(path='undo')

            span(style='width:5%')  

            span.dropdown
                span.dropdown-toggle.btn.btn-default(hover='Change how data is grouped', show='left')
                    icon(path='group')
                .dropdown-menu
                    h3.popover-title Group By
                    .btn-group-vertical
                        button.btn.btn-link(ng-repeat='(val, name) in grouping', type='button', ng-model='groupBy.$', btn-radio='val')
                            | {{name}}
            span.dropdown
                span.dropdown-toggle.btn.btn-default(hover='Change the sorting order', show='left')
                    icon(path='sort')
                .dropdown-menu
                    h3.popover-title Sort By
                    .btn-group-vertical
                        button.btn.btn-link(ng-repeat='(val, name) in sorting', type='button', ng-model='sortBy.$', btn-radio='val')
                            | {{name}}

            span(style='width:5%')  

            button#toggleExpand(ng-click='collapse()', hover='Toggle expanded or collapsed rows', show='left', class='btn btn-default {{wellCollapse}}', type='button')
                icon(path='expand')
                icon(path='collapse')