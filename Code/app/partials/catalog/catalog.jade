.add-button.btn.btn-success(ng-click='edit(true)')
    icon add
    |&nbsp;Add Course

div(class='{{wellCollapse}}')

    div.am-fade-and-slide-bottom(ng-repeat='(header, group) in groups')

        h3(style='border-bottom: 1px solid; margin-top:20px')
            | {{header}}
            span.pull-right {{group.length}}

        .rollupContainer

            table(class='table table-striped table-expanded table-hover group{{groupBy}}', fixed-header)

                thead(ng-class='{slim:(count > 1 && group.length == 1)}')
                    tr
                        th
                        th.w55 Course
                        th.w10 MDS
                        th.w10 AFSC
                        th.w15 Length
                        th.w10 Actions

                tbody
                    tr(ng-repeat='row in group', ng-class='{archived:row.Archived}', ng-dblclick='edit(false)', ng-if='!row.Archived || showArchive')
                        td
                            updated row
                        td(style='text-transform: uppercase')
                            b {{row.PDS}}
                            |&nbsp;-&nbsp;{{row.Number}}&nbsp;
                            span(ng-if='row.IMDS')
                                |(IMDS: {{row.IMDS}})

                            span.pull-right(ng-if='row.Units && !row.Archived', hover='{{row.PDS}} is taught by {{row.Units.length}} FTDs:', content='{{row.units}}', style='margin-right: 15px;')
                                icon instructor
                            span.pull-right(ng-if='row.Archived', style='margin-right:10%') *** ARCHIVED COURSE ***
                            br
                            span.peek {{row.Title}}
                        td
                            b {{row.MDS}}
                        td
                            b {{row.AFSC}}
                        td
                            | Days:&nbsp;
                            b {{row.Days}}
                            br
                            span.peek
                                | Hours:&nbsp;
                                b {{row.Hours}}
                        td.invert(ng-once='')
                            actions(edit, archive, label='course')